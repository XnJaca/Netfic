@model Infraestructure.Models.MetodoPago

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var idUsuario = ViewBag.idUsuario;
}

<h2>Create</h2>


@using (Html.BeginForm("Save", "MetodoPago", FormMethod.Post, new { enctype = "multipart/form-data", id = "metodoPagoForm" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>MetodoPago</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
       @* @Html.LabelFor(model => model.usuarioId, "usuarioId", htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            @Html.HiddenFor(model => model.usuarioId, new { Value = idUsuario })
            @Html.ValidationMessageFor(model => model.usuarioId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.tipo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select class="form-control" name="tipo" id="cantonSelect">
                <option value="Tarjeta Credito">Tarjeta Credito</option>
                <option value="Sinpe">Sinpe</option>
            </select>
            @Html.ValidationMessageFor(model => model.numero, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.numero, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.numero, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.numero, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.fechaExpericacion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control" name="fechaExpericacion" id="fechaExpiracion" type="date" value="2025-11-23" id="example-date-input">
            @*@Html.ValidationMessageFor(model => model.fechaExpericacion, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

