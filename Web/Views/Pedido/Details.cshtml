@model Infraestructure.Models.Pedido

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string numeroCompleto = Model.MetodoPago.numero.ToString();
    string ultimosCuatroDigitos = numeroCompleto.Substring(numeroCompleto.Length - 4);

    var subtotal = Model.PedidoProducto.FirstOrDefault().subtotal.ToString("N0");
}



<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card mb-4">
                <div class="card-header p-3 pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6>Detalles del Pedido</h6>
                            <p class="text-sm mb-0">
                                Orden no. <b>@Html.DisplayFor(model => model.id)</b> desde el <b>
                                    @Html.Raw(String.Format("{0:d}", Model.fecha_pedido))
                                </b>
                            </p>
                            <p class="text-sm">
                                Code: <b>KF332</b>
                            </p>
                        </div>
                        <a href="javascript:;" class="btn bg-gradient-secondary ms-auto mb-0">Factura</a>
                    </div>
                </div>
                <div class="card-body p-3 pt-0">
                    <hr class="horizontal dark mt-0 mb-4">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="d-flex">
                                <div>
                                    <img src="@ViewBag.idFoto[0]" class="avatar avatar-xxl me-3" alt="product image">
                                </div>
                                <div>
                                    <h6 class="text-lg mb-0 mt-2">@Html.DisplayFor(model => model.PedidoProducto.FirstOrDefault().Producto.nombre)</h6>
                                    <p class="text-sm mb-3">El producto aun no ha sido entregado.</p>
                                    <span class="badge badge-sm bg-gradient-secondary">@Html.DisplayFor(model => model.EstadoPedido.descripcion)</span>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-6 col-md-6 col-12 my-auto text-end">
                            <a href="javascript:;" class="btn bg-gradient-info mb-0">Contactar al vendedor</a>
                            <p class="text-sm mt-2 mb-0">¿Tienes algun problema con este producto?</p>
                        </div>
                    </div>
                    <hr class="horizontal dark mt-4 mb-4">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-12">
                            <h6 class="mb-3">Seguimiento del Pedido</h6>
                            <div class="timeline timeline-one-side">
                                <div class="timeline-block mb-3">
                                    <span class="timeline-step">
                                        @if (@Model.EstadoPedido.id == 1)
                                        {
                                            <i class="ni ni-check-bold text-success text-gradient"></i>
                                        }
                                        else
                                        {
                                            <i class="ni ni-bell-55 text-secondary"></i>
                                        }

                                    </span>
                                    <div class="timeline-content">
                                        <h6 class="text-dark text-sm font-weight-bold mb-0">Orden Recibida</h6>
                                        <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">22 DEC 7:20 AM</p>
                                    </div>
                                </div>
                                <div class="timeline-block mb-3">
                                    <span class="timeline-step">
                                        <i class="ni ni-html5 text-secondary"></i>
                                    </span>
                                    <div class="timeline-content">
                                        <h6 class="text-dark text-sm font-weight-bold mb-0">Preparando pedido #1832412</h6>
                                        <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">22 DEC 7:21 AM</p>
                                    </div>
                                </div>
                                <div class="timeline-block mb-3">
                                    <span class="timeline-step">
                                        <i class="ni ni-cart text-secondary"></i>
                                    </span>
                                    <div class="timeline-content">
                                        <h6 class="text-dark text-sm font-weight-bold mb-0">Pedido en camino</h6>
                                        <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">22 DEC 8:10 AM</p>
                                    </div>
                                </div>
                                <div class="timeline-block mb-3">
                                    <span class="timeline-step">
                                        <i class="ni ni-satisfied text-secondary"></i>
                                    </span>
                                    <div class="timeline-content">
                                        <h6 class="text-dark text-sm font-weight-bold mb-0">Pedido entregrado</h6>
                                        <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">22 DEC 4:54 PM</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5 col-md-6 col-12">
                            <h6 class="mb-3">Detalles del Pago</h6>
                            <div class="card card-body border card-plain border-radius-lg d-flex align-items-center flex-row">
                                <img class="w-10 me-3 mb-0" src="../../../Content/img/logos/mastercard.png" alt="logo">
                                <h6 class="mb-0">****&nbsp;&nbsp;&nbsp;****&nbsp;&nbsp;&nbsp;****&nbsp;&nbsp;&nbsp;@ultimosCuatroDigitos</h6>
                                <button type="button" class="btn btn-icon-only btn-rounded btn-outline-secondary mb-0 ms-2 btn-sm d-flex align-items-center justify-content-center ms-auto" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="We do not store card details">
                                    <i class="fas fa-info" aria-hidden="true"></i>
                                </button>
                            </div>
                            <h6 class="mb-3 mt-4">Información de facturación</h6>
                            <ul class="list-group">
                                <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                                    <div class="d-flex flex-column">
                                        <h6 class="mb-3 text-sm">Cliente: @Html.DisplayFor(model => model.Usuario.nombre) @Html.DisplayFor(model => model.Usuario.apellidos)</h6>
                                        <span class="mb-2 text-xs">Numero Telefono: <span class="text-dark font-weight-bold ms-2">@Html.DisplayFor(model => model.Usuario.Telefono.FirstOrDefault().numero)</span></span>
                                        <span class="mb-2 text-xs">Email: <span class="text-dark ms-2 font-weight-bold">@Html.DisplayFor(model => model.Usuario.email)</span></span>
                                        <span class="text-xs">Direccion: <span class="text-dark ms-2 font-weight-bold">@Html.DisplayFor(model => model.Usuario.Direccion.FirstOrDefault().direccion1)</span></span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-3 col-12 ms-auto">
                            <h6 class="mb-3">Resumen del pedido</h6>
                            <div class="d-flex justify-content-between">
                                <span class="mb-2 text-sm">
                                   Subtotal:
                                </span>
                                <span class="text-dark font-weight-bold ms-2">&#8353 @subtotal</span>
                            </div>
                            @*<div class="d-flex justify-content-between">
                                <span class="mb-2 text-sm">
                                    Delivery:
                                </span>
                                <span class="text-dark ms-2 font-weight-bold">$14</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-sm">
                                    Taxes:
                                </span>
                                <span class="text-dark ms-2 font-weight-bold">$1.95</span>
                            </div>*@
                            <div class="d-flex justify-content-between mt-4">
                                <span class="mb-2 text-lg">
                                    Total:
                                </span>
                                <span class="text-dark text-lg ms-2 font-weight-bold">@*@Model.total.ToString("C0")*@ &#8353; @Model.total.ToString("N0")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer pt-3  ">
        <div class="container-fluid">
            <div class="row align-items-center justify-content-lg-between">
                <div class="col-lg-6 mb-lg-0 mb-4">
                    <div class="copyright text-center text-sm text-muted text-lg-start">
                        ©
                        <script>
                            document.write(new Date().getFullYear())
                        </script>2023,
                        made with <i class="fa fa-heart" aria-hidden="true"></i> by
                        <a href="https://www.creative-tim.com" class="font-weight-bold" target="_blank">Creative Tim</a>
                        for a better web.
                    </div>
                </div>
                <div class="col-lg-6">
                    <ul class="nav nav-footer justify-content-center justify-content-lg-end">
                        <li class="nav-item">
                            <a href="https://www.creative-tim.com" class="nav-link text-muted" target="_blank">Creative Tim</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://www.creative-tim.com/presentation" class="nav-link text-muted" target="_blank">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://www.creative-tim.com/blog" class="nav-link text-muted" target="_blank">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://www.creative-tim.com/license" class="nav-link pe-0 text-muted" target="_blank">License</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</div>

