@model IEnumerable<Infraestructure.Models.PedidoProducto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="table-responsive">
        <table class="table align-items-center mb-0">
            <thead>
                <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Producto</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Cliente</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Estado</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex px-2 py-1">
                                <div>
                                    <img src="https://demos.creative-tim.com/soft-ui-design-system-pro/assets/img/team-2.jpg" class="avatar avatar-sm me-3">
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h6 class="mb-0 text-xs">@Html.DisplayFor(model => item.pedidoId)</h6>
                                    @*<p class="text-xs text-secondary mb-0">john@creative-tim.com</p>*@
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(model => item.Producto.nombre)</p>
                            @*<p class="text-xs text-secondary mb-0">Organization</p>*@
                        </td>
                        <td class="align-middle text-center text-sm">
                            <h6 class="mb-0 text-xs">@Html.DisplayFor(model => item.Pedido.Usuario.nombre)</h6>
                        </td>
                        <td class="align-middle text-center">
                            <span class="badge bg-gradient-secondary">@Html.DisplayFor(model => item.Pedido.EstadoPedido.descripcion)</span>
                        </td>
                        <td class="align-middle text-center">
                            <a href="@Url.Action("Details", new { id = item.Pedido.id })" class="icon-link" data-bs-toggle="tooltip" data-bs-placement="top" title="Previsualizar Pedido">
                                <i class="fa fa-eye" style="color: forestgreen; margin-right: 10px;"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


