@model Infraestructure.Models.Usuario

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('../../Content/img/curved-images/curved0.jpg'); background-position-y: 50%;">
        <span class="mask bg-gradient-primary opacity-6"></span>
    </div>
    <div class="card card-body blur shadow-blur mx-4 mt-n6 overflow-hidden">
        <div class="row gx-4">
            <div class="col-auto">
                <div class="avatar avatar-xl position-relative">
                    <img src="../../Content/img/team-3.jpg" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
                </div>
            </div>
            <div class="col-auto my-auto">
                <div class="h-100">
                    <h5 class="mb-1">
                        @Html.DisplayFor(model => model.nombre)  @Html.DisplayFor(model => model.apellidos)
                    </h5>
                    <p class="mb-0 font-weight-bold text-sm">
                        @foreach (var a in Model.TipoUsuario)
                        {
                            @a.descripcion
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 col-xl-12 p-5">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h6 class="mb-0">Informacion del Usuario</h6>
                        </div>
                        <div class="col-md-4 text-end">
                            @if (Model.estado == 0)
                            {


                                <span class="badge badge-sm bg-gradient-danger me-4">Inactivo</span>
                            }
                            else
                            {
                                <span class="badge badge-sm bg-gradient-danger me-4">Inactivo</span>
                            }
                            <a href="@Url.Action("Edit", "User", new { id = Model.id })">
                                <i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Profile"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <p class="text-sm">
                        TODO: CREAR UN CAMPO DE DESCRIPCION EN LA BD.
                    </p>
                    <hr class="horizontal gray-light my-2">
                    <ul class="list-group">
                        @*<li>@Html.DisplayFor(model => model.estado)</li>*@
                        <li class="list-group-item border-0 ps-0 pt-0 text-sm">
                            <strong class="text-dark">Nombre:</strong> &nbsp; @Html.DisplayFor(model => model.nombre)
                        </li>
                        <li class="list-group-item border-0 ps-0 pt-0 text-sm">
                            <strong class="text-dark">Apellidos:</strong> &nbsp; @Html.DisplayFor(model => model.apellidos)
                        </li>
                        <li class="list-group-item border-0 ps-0 text-sm">
                            <strong class="text-dark">Telefono(s):</strong> &nbsp;
                            @foreach (var t in Model.Telefono)
                            {
                                @t.numero @t.tipoTelefono
                            }
                        </li>
                        <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Email:</strong> &nbsp; @Html.DisplayFor(model => model.email)</li>
                        <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Direccion:</strong> &nbsp; @Html.DisplayFor(model => model.Direccion.FirstOrDefault().direccion1)</li>
                        <li class="list-group-item border-0 ps-0 pb-0">
                            <strong class="text-dark text-sm">Tipo Usuario:</strong> &nbsp;
                            @foreach (var tu in Model.TipoUsuario)
                            {
                                @tu.descripcion
                            }
                            @*<a class="btn btn-facebook btn-simple mb-0 ps-1 pe-2 py-0" href="javascript:;">
                                    <i class="fab fa-facebook fa-lg"></i>
                                </a>
                                <a class="btn btn-twitter btn-simple mb-0 ps-1 pe-2 py-0" href="javascript:;">
                                    <i class="fab fa-twitter fa-lg"></i>
                                </a>
                                <a class="btn btn-instagram btn-simple mb-0 ps-1 pe-2 py-0" href="javascript:;">
                                    <i class="fab fa-instagram fa-lg"></i>
                                </a>*@
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

